<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg_step_count"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_jibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计步"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/main_frame_container"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_jibu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/main_text_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="20sp"

            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"/>
         <ImageView
             android:layout_width="40dp"
             android:layout_marginTop="30dp"
             android:src="@drawable/step"
             android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日步数"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_frame_container1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/main_frame_container"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/main_text_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/longss"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动距离"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_frame_container2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/main_frame_container1"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/main_text_kaluli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/kaluli"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消耗能量"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>
   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_below="@+id/main_frame_container2"
       android:layout_marginTop="60dp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="设置目标"
           android:textSize="20sp"
           android:textColor="#5ece47"
           android:layout_gravity="center_horizontal"/>
       <ImageView
           android:layout_width="60dp"
           android:id="@+id/iv"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="30dp"
           android:src="@drawable/setting"
           android:layout_height="60dp" />
   </FrameLayout>

</RelativeLayout>
